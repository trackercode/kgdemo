<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mvc.kgdemo.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.mvc.kgdemo.entity.User">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="username" jdbcType="VARCHAR" property="userName" />
        <result column="birthday" jdbcType="DATE" property="birthday" />
        <result column="sex" jdbcType="CHAR" property="sex" />
        <result column="address" jdbcType="VARCHAR" property="address" />
    </resultMap>

    <select id="findOne" resultType="com.mvc.kgdemo.entity.User">
        select * from user where id = #{id}
    </select>

    <select id="findAll" resultType="com.mvc.kgdemo.entity.User">
        select * from user
    </select>

    <select id="queryUserBySex" parameterType="java.util.HashMap" resultType="com.mvc.kgdemo.entity.User">
        select * from USER  where 1 = 1
        <if test="sex != null and sex != ''">AND SEX = #{sex}</if>
    </select>



</mapper>
